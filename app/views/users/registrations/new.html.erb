<h4 class='heading-text'>Sign up</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Enter email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "form-control" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Sign up", class: "form-control btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
